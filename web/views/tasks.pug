extends layout.pug

block content
    .row.mt-4
        .col-12
            .card
                .card-header Tasks
                .card-body
                    .card-deck
                        .card.pb-4.m-4.col-12.col-lg-9
                            .card-header To-Do
                            .table-wrapper
                                table.table.table-fixed
                                    thead
                                        tr.d-flex
                                            th.col-4 Task Name
                                            th.col-3 Class
                                            th.col-3 Due Date
                                            th.col-2.text-center Actions
                                    each task in tasks
                                        if !task.completed
                                            tr.d-flex
                                                td.col-4=task.name
                                                td.col-3=task.class
                                                td.col-3 #{(task.due.getUTCMonth() + 1) + '/' + task.due.getUTCDate() + '/' + task.due.getFullYear()}
                                                td.col-2.text-right.text-center
                                                    a.m-2.btn.btn-danger(href="/task/delete/" + task._id)
                                                        span.fas.fa-times
                                                    a.btn.btn-success(href="/task/complete/" + task._id)
                                                        span.fas.fa-check
                                form.sticky-bottom(action="/task/create" method="GET")
                                    .form-row.mr-2
                                        .col-4
                                            .input-group
                                                input.form-control(type="text" placeholder="Task Name" name="name")
                                        .col-3
                                            select.custom-select(name="class")
                                                option(selected) Class
                                                option(value='Math') Math
                                                option(value='Science') Science
                                        .col-3
                                            input.form-control(name="due_date" type="date" value=new Date().toISOString().substr(0, 10))
                                        .col-1
                                        .col-1
                                            button.btn.btn-outline-secondary(type="submit")
                                                    span.fas.fa-plus
                        .card.pb-4.m-4.col-3
                            .card-header Recently Completed
                            .card-body
                                ul.list-group
                                    each task in tasks
                                        if task.completed
                                            li.list-group-item=task.name
                                                a.btn.btn-secondary.float-right(href="task/delete/" + task._id)
                                                    span.fas.fa-times
                .card-footer 
                    span.mr-2 Last updated #{new Date().toUTCString()}
                    button(onclick="location.reload()").btn.btn-sm.btn-primary Refresh
                
